{
 // "$schema": "vscode://schemas/settings/user",

 // General
 //
 // Window
 "window.openFilesInNewWindow": "on",

 // Workbench
 "workbench.colorTheme": "01e61500-862c-41cd-b653-48d2ef7b1882",
 "workbench.editor.enablePreview": false,
 "workbench.editor.pinnedTabsOnSeparateRow": true,
 "workbench.iconTheme": "material-icon-theme",
 "workbench.sideBar.location": "left",
 "workbench.startupEditor": "none",

 // Editor
 "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
 "editor.unicodeHighlight.ambiguousCharacters": false,
 "editor.codeActionsOnSave": {
  "source.fixAll": "never",
  "source.organizeImports": "never"
 },
 "editor.cursorBlinking": "expand",
 "editor.cursorSmoothCaretAnimation": "on",
 "editor.cursorStyle": "line",
 "editor.cursorWidth": 3,
 "editor.colorDecorators": true,
 "editor.formatOnSave": true,
 "editor.defaultFormatter": "ms-python.black-formatter",
 "editor.find.addExtraSpaceOnTop": false,
 "editor.guides.bracketPairs": true,
 "editor.gotoLocation.multipleDefinitions": "goto",
 "editor.gotoLocation.multipleImplementations": "goto",
 "editor.inlayHints.enabled": "off",
 "editor.inlineSuggest.enabled": true,
 "editor.linkedEditing": true,
 "editor.minimap.enabled": false,
 "editor.multiCursorModifier": "alt",
 "editor.stickyScroll.enabled": true,
 "editor.suggestSelection": "first",
 "editor.tabCompletion": "on",
 "editor.snippetSuggestions": "top",
 "editor.renderWhitespace": "boundary",
 "editor.renderControlCharacters": false,

 // Files
 "files.insertFinalNewline": true,
 "files.trimTrailingWhitespace": true,
 "files.exclude": {
  "**/.DS_Store": true,
  "**/Thumbs.db": true
 },
 "files.watcherExclude": {
  "**/.git/**": true,
  "**/build/**": true,
  "**/dist/**": true,
  "**/out/**": true
 },

 // Productivity
 //
 // Search
 "search.exclude": {
  "**/dist": true,
  "**/build": true
 },
 "search.quickOpen.includeSymbols": true,

 // Explorer
 "explorer.compactFolders": false,

 // Terminal
 "terminal.integrated.cursorStyle": "line",
 "terminal.integrated.cursorWidth": 2,
 "terminal.integrated.scrollback": 2000,
 "terminal.integrated.stickyScroll.enabled": true,
 "terminal.integrated.tabs.focusMode": "singleClick",

 // Debug
 "debug.inlineValues": "on",
 "debug.openDebug": "neverOpen",

 // Security
 "security.workspace.trust.untrustedFiles": "open",

 // Git
 "git.autofetch": true,
 "git.confirmSync": false,
 "git.enableSmartCommit": true,
 "git.ignoreMissingGitWarning": true,
 "git.pullBeforeCheckout": true,

 // Extensions
 //
 // VScord
 "vscord.app.name": "Code",
 "vscord.status.buttons.button1.git.active.url": "https://github.com/r4lrgx",
 "vscord.status.buttons.button1.git.idle.url": "https://github.com/r4lrgx",
 "vscord.status.buttons.button1.git.inactive.url": "https://github.com/r4lrgx",
 "vscord.status.details.text.debugging": "üêõ Debugging {file_name}{file_extension}",
