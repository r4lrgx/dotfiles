 "vscord.status.state.text.viewing": "üìÑ Viewing {file_name}{file_extension}",

 // Error Lens
 "errorLens.codeLensTemplate": "$severity $message",
 "errorLens.enabledDiagnosticLevels": ["error", "warning"],
 "errorLens.fontWeight": "bold",
 "errorLens.gutterIconsEnabled": true,

 // Icon Theme
 "material-icon-theme.activeIconPack": "react",
 "material-icon-theme.enableLogging": false,
 "material-icon-theme.files.color": "#90a4ae",
 "material-icon-theme.folders.color": "#90a4ae",
 "material-icon-theme.folders.theme": "specific",
 "material-icon-theme.hidesExplorerArrows": false,
 "material-icon-theme.opacity": 0.95,
 "material-icon-theme.saturation": 0.9,

 // WSL
 "remote.WSL.debug": false,
 "remote.WSL.fileWatcher.polling": true,
 "remote.WSL.fileWatcher.pollingInterval": 5000,

 // Doki Theme
 // Doki Theme
 "doki.background.anchor": "center",
 "doki.background.enabled": true,
 "doki.background.path": "C:\\.r4lrgx\\vscode\\theme\\bg.png",
 "doki.wallpaper.enabled": true,
 "doki.wallpaper.path": "C:\\.r4lrgx\\vscode\\theme\\wallpaper.png",
 "doki.sticker.css": "z-index:100;background-position:100% 97%",
 // "doki.sticker.path": "C:\\.r4lrgx\\vscode\\theme\\sticker.png",
 "doki.statusbar.name": "‚ö° Code in less time ‚òï",

 // GitHub Actions
 "github-actions.remote-name": "origin",

 // Image Preview
 "gutterpreview.enableReferenceLookup": true,

 // IntelliCode
 "vsintellicode.python.completionsEnabled": true,
 "intellicodeApiExamples.python.enabled": true,
 "intellicodeCompletions.parseErrorFilter": true,

 // Path Intellisense
 "path-intellisense.autoSlashAfterDirectory": true,
 "path-intellisense.showHiddenFiles": true
}
